{
  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Exceptions",
      "Serilog.Formatting.Elasticsearch",
      "Serilog.Sinks.AzureEventHub",
      "Serilog.Sinks.Console"
    ],
    "Enrich": [
      "WithUniqueId",
      "WithMachineName",
      "WithEnvironmentUserName",
      "WithExceptionDetails"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Compact, Serilog.Formatting.Compact.CompactJsonFormatter"
        }
      },
      {
        "Name": "AzureEventHubSink",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "formatter": "Serilog.Formatting.Compact, Serilog.Formatting.Compact.CompactJsonFormatter"
        }
      }
    ]
  },
  "LogConfiguration": {
    "Delay": 100,
    "IterationCount": 60
  },
  "LoggingEventHub": {
    "ConnectionString": "<Add event hub connection string or create an environment variable names LoggingEventHub:ConnectionString with the connection string value>"
  } 
}